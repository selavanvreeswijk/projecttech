<!DOCTYPE html>
<html lang="en ">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log-in</title>
    <link rel="stylesheet" href="/style.css">

    <%- include('partials/header') %>    

    <style>
        .register{
            display: flex;
            flex-direction: column;
            align-items: center;

            margin-top: 3em;
        }


        .register a{
            margin-top: 1em;
            padding: 0.2em 0.8em;

            font-size: 0.8em;
        }


        /* Error: OOK IN ALGEMENE STYLING ZETTEN */ 
        .error{
            border: 2px solid red !important;
            color: red !important;
        }

        .error-message{
            display: none;

            color: red;
            font-size: 14px;
            margin-bottom: 10px;
        }
    </style>
</head>

    <body class="forms-body">
        <div class="forms-container">
            <div class="forms">
                <h1 class="forms-h1">Login</h1>
    
                <form action="/log-in" method="POST">
                    <div>
                        <label for="username">Username</label>
                        <input class="form-input-styling" type="text" name="username" required>
                    </div>
         
                    <div>
                        <label for="password"> Password</label>
                        <input class="form-input-styling" type="password" name="password" required>
                    </div>

                    <p class="error-message" id="error-msg">Invalid username or password, try again</p>
     
                    <button class="btn-styling" type="submit">Log In</button>
                </form>
            </div>
    
            <div class="register">
                <p>Don't have an account?</p>

                <a class="btn-styling" href="/register">Register</a>
            </div>
        </div>
    
    <footer>
        <%- include('partials/footer') %> 
    </footer>

    <script>
        document.querySelector(".log-in form").addEventListener("submit", async function(event) {
            event.preventDefault(); 

            let form = event.target //waar de 'submit event' plaatsvindt
            let formData = new FormData(form) //haalt ingevulde gegevens op
            let errorMsg = document.getElementById("error-msg");


            try {
                let response = await fetch("log-in", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ 
                        username: formData.get("username"),
                        password: formData.get("password")
                    })
                });

                let data = await response.json();

                if (data.success) {
                    console.log("success")
                    window.location.href = data.redirect;
                } else {
                    console.log("geen succes")
                    errorMsg.style.display = "block";
                }
            } catch (error) {
                console.error("Error:", error);
            }
        });
    </script>

    </body>
</html>