<!DOCTYPE html>
<html lang="en ">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/style.css">

    <%- include('partials/header') %>    

    <style>
        body {
            display: flex;
            flex-direction: column;
        }


        .container{
            margin: 0.5em 1.5em;
        }


        h2{
            border-bottom: 0.05em solid var(--color-lines);

            width: 11.3em;
            padding-bottom: 0.2em;
        }

        label{
            margin-bottom: 0.5em;
        }


        input{
            background: var(--color-background-inputfield);

            border: 0.09em solid var(--color-lines);
            border-radius: 0.8em;

            width: 90%;
            padding: 0.9em;
            margin-top: 0.3em;
        }

        form div{
            margin-top: 1.5em;
        }


        button {
            background: var(--color-background-inputfield);

            border: 0.09em solid var(--color-lines);
            border-radius: 0.8em;

            width: 40%;
            padding: 0.3em 0.9em;
            display: block;
            margin: 0 auto;
            margin-top: 2em;
        }

        /* Error */
        .error {
            color: red;
            font-size: 14px;
            display: none;
            margin-top: 5px;
        }

        .error-input {
            border: 2px solid red !important;
        }
    </style>
    </head>

    <body>
        <div class="container">
            <div class="register">
                <h2>Register</h2>
    
                <form id="register-form" action="/register" method="POST">
                    <div>
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" required>    
                        <p class="error" id="username-error">This username is already taken</p>
                    </div>
         
                    <div>
                        <label for="password"> Password</label>
                        <input type="password" name="password" required>
                    </div>

                    <div>
                        <label for="confirm-password"> Repeat password</label>
                        <input type="password" id="confirm-password" name="confirmPassword" required>
                        <p class="error" id="password-error">Passwords do not match</p>
                    </div>
     
                    <button type="submit">Submit</button> 
                </form>
            </div>
        </div>
    <footer>
        <%- include('partials/footer') %> 
    </footer>

    <script>
        document.getElementById("register-form").addEventListener("submit", async function(event) {
            event.preventDefault(); // Voorkom standaard verzenden

            let form = event.target;
            let formData = new FormData(form);

            let usernameError = document.getElementById("username-error");
            let passwordError = document.getElementById("password-error");

            let isValid = true; // Controleert of het formulier correct is

            // reset errors
            usernameError.style.display = "none";
            passwordError.style.display = "none";
            form.username.classList.remove("error-input");
            form["confirmPassword"].classList.remove("error-input");

            //controleer of gebruikersnaam al bestaat
            try {
                let response = await fetch("/check-username", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ username: formData.get("username") })
            });

            let data = await response.json();

            if (data.exists) {
                usernameError.style.display = "block";
                formData.get("username").classList.add("error-input");
                isValid = false;
            }
            } catch (error) {
                console.error("Username check failed:", error);
            }

            // Check of wachtwoorden overeenkomen
            if (formData.get("password") !== formData.get("confirmPassword")) {
                passwordError.style.display = "block";
                form["confirmPassword"].classList.add("error-input");
                isValid = false;
            } 

            // Als alles correct is, verzend formulier
            if (isValid) {
                try {
                    let registerResponse = await fetch("/register", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ 
                        username: formData.get("username"), 
                        password: formData.get("password"),
                        confirmPassword: formData.get("confirmPassword")})
                    });

                    let registerData = await registerResponse.json();

                    if(registerData.success) {
                        window.location.href = "/log-in";
                    } else {
                        console.log("error, geen succes");
                    }
                } catch (error) {
                console.error("Registration failed:", error);
                };
            }
        });
    
    </script>

    </body>
</html>