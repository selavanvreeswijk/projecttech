<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cards</title>
    <link rel="stylesheet" href="/style.css">

    <style>
            /* Carrousel scroll container */
            /* .carrousel{
                margin-bottom: 2.5em;
            } */


            .carrousel h2{
                border-bottom: 0.05em solid var(--color-lines);
                width: 10.5em;
                padding: 0.2em 0;
                margin-top: 3.5em;
                margin-bottom: 0.7em;
            }


            .carrousel-scroll{
                display: flex;
                overflow-x: auto; 
                gap: 1em;
                scroll-snap-type: x mandatory; 
                -webkit-overflow-scrolling: touch; 
                padding: 10px 0; 
            }


            .plant-card{
                display: flex;
                flex-direction: column;
                text-align: center;

                border-radius: .7em;
                border: .08em solid var(--color-lines);
                width: 10em; 
                
                flex-shrink: 0; 
                scroll-snap-align: start; 
            }


            .carrousel img{
                width: 100%;
                border-radius: .7em;
            }


            .carrousel h3{
                margin-top: 0.5em;
                margin-bottom: 0.5em;
            }


            .carrousel a{
                font-size: 0.75em;
            }


            .plant-card div{
                padding: 0.5em;
                margin-bottom: 0.4em;
            }

    </style>
</head>

<body>
    <main>
        <section class="carrousel">
            <h2>Popular plants</h2>
               
            <div class="carrousel-scroll">
                <% popularPlants.forEach(plant => { %>
                    <div class="plant-card">
                        <a href="/plant/<%=plant.id%>">
                            <img src="<%= plant.Img %>" alt="Picture of a plant">

                            <div>
                                <h3><%= plant['Common name'] %> e</h3>

                                <span class="btn-styling">View details</span>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>
</body>
</html>


