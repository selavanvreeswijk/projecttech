<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Quiz</title>
        <link rel="stylesheet" href="/style.css">

        <%- include('partials/header') %>

        <style>
            main{
                display: flex;
                flex-direction: column;
                text-align: center;
            }


            button{
                background: var(--color-background-inputfield);

                border: 0.09em solid var(--color-lines);
                border-radius: 0.8em;

                width: 40%;
                padding: 0.3em 0.9em;
            }


            /* Begin */
            .begin button{
                margin-top: 2em;
                color: var(--color-tekst);
            }


            .begin img{
                width: 85vw;
            }
            

            .begin{
                height: 65vh; 

                display: flex;
                flex-direction: column; 
                align-items: center;
                justify-content: center;
                text-align: center; 
            }


            /* Questions */
            /* Progress bar */
            progress{
                display: none;
                position: fixed;

                width: 80%;
                top: 9em;
                left: 50%;
                transform: translateX(-50%);
                height: 0.9em;
            }
            

            progress[value]{
                color: var(90deg, --color-footer-background) 0/var(--w);
                background: var( --color-background-inputfield);
            }


            progress[value]::-webkit-progress-bar {
                background-color: var(--color-background-inputfield);
                border-radius: 1em;
                border: .07em solid var(--color-lines);
            }


            progress[value]::-webkit-progress-value {
                background: var(--color-footer-background); 
                border-radius: 1em;

                transition: width 0.5s ease-in-out;
            }


            /* Questions */
            .question{
                display: none;
                width: 80%;
                max-width: 600px;
                margin: 1em 0;
            }


            .question.active{
                display: block;
            }
          

            /* Input fields */
            .questions section div{
                display: flex;
                flex-direction: row;
                justify-content: center;
            }


            .question div{
                margin: 2em 0;
            }


            .questions{
                display: none;
                height: 100vh;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                text-align: center;
            }

            
            .questions section div p{
                padding: 0 0.5em;
            }


            h2{
                margin: 1em;
            }


            /* Question 2 */
            div label{
                display: inline-block;
                text-align: center;

                border: 0.09em solid var(--color-lines);
                border-radius: 0.2em;

                margin-left: 0.5em;
                padding: 0.3em 0.9em;
                transition: all 0.3s ease-in-out;
            }


            div input[type="radio"]{
                display: none;
            }


            div input[type="radio"]:checked + label{
                border-color: var(--color-accent);
                background: var(--color-accent-light);
                color: white;
            }


            /* Question 3 */
            #question-3 div input{
                padding: 0.5em 2em;
            }


            /* Navigation buttons */
            .nav-buttons{
                display: none;
                width: 70%;
            }


            .nav-buttons button{
                margin-left: 0.3em;
            }
        </style>
    </head>

    <body>
        <main>
            <h1 class="h1-small">Quiz</h1>

            <div class="begin">
                <img src="/img/quiz-image.png" alt="Woman with plant"> <!--Source https://www.freepik.com/vectors/planting-happiness-->
                
                <p>Got 30 seconds? Get matched to your perfect plant!</p>
             
                <button>Begin</button>
            </div>

            <div class="questions">
                <section id="question-1" class="question">
                    <progress max="100" value="20">20%</progress> <!--Source https://developer.mozilla.org/en-US/docs/Web/HTML/Element/progress + https://verpex.com/blog/website-tips/how-to-style-a-progress-bar-using-css + https://www.w3schools.com/howto/howto_js_progressbar.asp-->

                    <h2>How much of a plant-expert are you?</h2>

                     <div>
                        <p>0</p>
                        <input type="range" min="0" max="100" value="50" oninput="saveAnswer(1, this.value)">
                        <p>10</p>
                    </div>
                </section>
            
                <section id="question-2" class="question">
                    <progress max="100" value="40">40%</progress>

                    <h2>Do you currently own plants?</h2>

                    <div>
                        <input type="radio" id="yes" name="plants" value="yes" onclick="saveAnswer(2, this.value)">
                        <label for="yes">Yes</label>
                    
                        <input type="radio" id="no" name="plants" value="no" onclick="saveAnswer(2, this.value)">
                        <label for="no">No</label>
                    </div>
                </section>
            
                <section id="question-3" class="question">
                    <progress max="100" value="60">60%</progress>

                    <h2>How much time would you like to invest in plants per week?</h2>

                    <div>
                        <input type="number" min="0" max="24" placeholder="Hours" oninput="saveAnswer(3, this.value)">
                    </div>
                </section>
            
                <section id="question-4" class="question">
                    <progress max="100" value="80">80%</progress>

                    <h2>How much money would you like to invest in plants?</h2>

                    <div>
                        <select onchange="saveAnswer(4, this.value)">
                            <option value="low">Less than €10</option>
                            <option value="medium">€10 - €50</option>
                            <option value="high">More than €50</option>
                        </select>
                    </div>
                </section>
    
                <section id="question-5" class="question">
                    <progress max="100" value="100">100%</progress>

                    <h2>How big do you want your plant to be?</h2>

                    <div>
                        <input type="text" placeholder="Small, Medium, Large" oninput="saveAnswer(5, this.value)">
                    </div>
                </section>
            
                <div class="nav-buttons">
                    <button onclick="prevQuestion()">Previous</button>
                    <button onclick="nextQuestion()">Next</button>
                </div>
            </div>
        </main>
       
        <footer>
            <%- include('partials/footer') %>
        </footer>

        <script> 
            // Click button 'begin' -> loading first question
            const begin = document.querySelector('.begin')
            const beginButton = document.querySelector('.begin button')
            const navButtons = document.querySelector('.nav-buttons')
            const questionSelection = document.querySelector('.questions')
            const progressBar = document.querySelector('progress')

            beginButton.addEventListener('click', function(){
                begin.style.display = 'none';
                navButtons.style.display = 'block';
                questionSelection.style.display = 'block';
                progressBar.style.display = 'block';
                updateProgress();
            })

            function updateProgress(){
                const progressValue = (currentQuestionIndex + 1) * 20;
                progressBar.value = progressValue;
            }

            // Show current question and navigation buttons
            // Source: chatGPT
            let currentQuestionIndex = 0; 
            let answers = {};

            const questions = document.querySelectorAll(".question");

            function showQuestion(index) {
                    questions.forEach((question) => {
                    question.classList.remove("active");
                })

                questions[index].classList.add("active");

                const prevButton = document.querySelector(".nav-buttons button:first-child");
                if (index === 0) {
                    prevButton.style.display = "none";
                } else {
                    prevButton.style.display = "inline-block";
                }
            }

            // Go to next question + save anwser 
            function nextQuestion(){
                if (currentQuestionIndex < questions.length - 1) {
                    currentQuestionIndex++;
                    showQuestion(currentQuestionIndex);
                }
            }

            function prevQuestion(){
                if (currentQuestionIndex > 0) {
                    currentQuestionIndex--;
                    showQuestion(currentQuestionIndex);
                }
            };

            function saveAnswer(questionId, value){
                answers[questionId] = value;
                console.log(answers); 
            };


            window.onload = () =>{
                showQuestion(currentQuestionIndex);
            };
        </script>
    </body>
</html>